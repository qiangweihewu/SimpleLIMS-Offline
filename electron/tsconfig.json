{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "../dist-electron",
    "allowJs": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.cts",
    "./**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}